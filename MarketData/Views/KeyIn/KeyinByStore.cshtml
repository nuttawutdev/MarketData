<div class="row">
    <div style="width: 100%; font-size: 13px;">
        <div class="row col-sm-12">

            <div class="col-sm-4">
                <label>Department Store</label>
                <select class="form-control col-sm-12 col-lg-8" >
                    <option>All</option>
                    <option>Central Bangna</option>
                    <option>The Mall Bangkae</option>
                    <option>Robinson Bangrak</option>
                </select>


            </div>
            <div class="col-sm-4">
                <label>Brand</label>
                <select class="form-control col-sm-12 col-lg-8">
                    <option>All</option>
                    <option>LOREAL</option>
                    <option>SHISEDO</option>
                    <option>Lux Asia</option>
                </select>


            </div>
            <div class="col-sm-4">
                <label>Distribution Channel</label>
                <select class="form-control col-sm-12 col-lg-8" >
                    <option>All</option>
                    <option>Counter</option>
                    <option>Boutique</option>
                    <option>Online</option>
                </select>


            </div>

        </div>
        <div class="row col-sm-12" style="padding-top: 15px;">
            <div class="col-sm-4">
                <label>Year</label>
                <select class="form-control col-sm-12 col-lg-8">
                    <option>2019</option>
                    <option>2020</option>
                </select>


            </div>
            <div class="col-sm-4">
                <label>Month</label>
                <select class="form-control col-sm-12 col-lg-8">
                    <option>January</option>
                    <option>February</option>
                    <option>March</option>
                    <option>April</option>
                    <option>May</option>
                    <option>June</option>
                    <option>July</option>
                    <option>August</option>
                    <option>September</option>
                    <option>October</option>
                    <option>November</option>
                    <option>December</option>
                </select>


            </div>
            <div class="col-sm-4">

                <label> Week</label>
                <select class="form-control col-sm-12 col-lg-8">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                </select>

            </div>

        </div>
        <div class="row col-sm-12"  style="padding-top: 15px;padding-bottom:15px;">
            <div class="col-sm-4">
                <label>Status</label>
                <select class="form-control col-sm-12 col-lg-8">
                    <option>New</option>
                </select>
            </div>
            <div class="col-sm-4" style="align-self: flex-end;">

                <div class="filter-group">
                    <button type="button" class="btn btn-outline-primary"><i class="ion-search"></i> Show</button>
                </div>


            </div>
            <div class="col-sm-4" >

              
                   


            </div>

        </div>



    </div>

</div>
<div class="container-xl" style="overflow-x:auto;">
    <div class="table-responsive table-sm">
        <div class="table-wrapper">
            <div style=" overflow-x: auto;">
                <table class="table table-striped table-hover ">
                    <thead class="table-secondary">
                        <tr class="row m-0">

                            <th class="col-1">Year</th>
                            <th class="col-1">Month</th>
                            <th class="col-1">Week</th>
                            <th class="col-1">Counter</th>
                            <th class="col-1">Distribution Chanel</th>
                            <th class="col-1">Status</th>
                            <th class="col-1">Last Edit</th>
                            <th class="col-1">Approver</th>
                            <th class="col-1">Submit Date</th>
                            <th class="col-1">Approve Date</th>
                            <th class="col-1">Remark</th>
                            <th class="col-1">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="row m-0">
                            <td class="col-1">2020</td>
                            <td class="col-1">09</td>
                            <td class="col-1">3</td>
                            <td class="col-1">Lancome Siam Paragon</td>
                            <td class="col-1">Counter</td>
                            <td class="col-1">Submitted</td>
                            <td class="col-1">Sirilux</td>
                            <td class="col-1">Natchapon</td>
                            <td class="col-1">2020-09-30</td>
                            <td class="col-1"></td>
                            <td class="col-1">ล่าช้า</td>
                            <td class="col-1">
                                <a href="KeyInByStore_Edit" class="btn btn-primary col-sm-12 col-md-5 btn-sm">
                                    <i class="ion-eye text-white"></i>
                                </a>
                                @*<a href="KeyInByStore_Edit" class="btn btn-warning col-sm-12 col-md-5 btn-sm">
                                    <i class="ion-edit text-white"></i>
                                </a>
                                <a href="#deleteModal" class="btn btn-danger col-sm-12 col-md-5 btn-sm" data-toggle="modal">
                                    <i class="ion-android-delete text-white"></i>
                                </a>*@
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal HTML -->
<div id="deleteModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h4 class="modal-title">Delete</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete these Records?</p>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                    <input type="submit" class="btn btn-danger" value="Delete">
                </div>
            </form>
        </div>
    </div>
</div>