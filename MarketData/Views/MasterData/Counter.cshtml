@{
    ViewData["Title"] = "Counter";
}


<h2>
    @ViewData["Title"]
    <a href="Counter_Edit" class="add-click"><i class="ion-ios-plus text-danger"></i></a>

</h2>
<hr />
<br />
<br />
<div class="row">
    <div class="table-filter" style="width: 100%; font-size: 13px;">
        <div class="row">

            <div class="col-sm-10">

                <div class="filter-group">
                    <label>Department Store</label>
                    <select class="form-control" style="width:200px;height:40px">
                        <option>All</option>
                        <option>Central Bangna</option>
                        <option>The Mall Bangkae</option>
                        <option>Robinson Bangrak</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label>Brand</label>
                    <select class="form-control" style="width: 150px; height: 40px">
                        <option>All</option>
                        <option>LOREAL</option>
                        <option>SHISEDO</option>
                        <option>Lux Asia</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label>Distribution Channels</label>
                    <select class="form-control" style="width: 150px; height: 40px">
                        <option>All</option>
                        <option>Counter</option>
                        <option>Boutique</option>
                        <option>Online</option>
                    </select>
                </div>
                <div class="filter-group">
                    <button type="button" class="btn btn-outline-primary"><i class="ion-search"></i></button>
                </div>
            </div>
            <div class="col-sm-2">
                <div class="custom-file-upload">

                    <label for="file-upload" class="custom-file-upload1">
                        <i class="ion-android-document"></i> Import by Excel
                    </label>
                    <input id="file-upload" type="file" />
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">

            <table class="table table-striped table-hover ">
                <thead class="table-secondary">
                    <tr class="row m-0">

                        <th class="col-4">Department Store</th>
                        <th class="col-4">Brand</th>
                        <th class="col-2">Distribution Channels</th>
                        <th class="col-2 text-center">Action</th>
                    </tr>
                </thead>
                <tbody>

                    <tr class="row m-0">
                        <td class="col-4">Central Bangna</td>
                        <td class="col-4">LOREAL</td>
                        <td class="col-2">Counter</td>
                        <td class="col-2 text-center">
                            <a href="Counter_Edit" class="btn btn-primary col-sm-12 col-md-3 btn-sm">
                                <i class="ion-eye text-white"></i>
                            </a>
                            <a href="Counter_Edit" class="btn btn-warning col-sm-12 col-md-3 btn-sm">
                                <i class="ion-edit text-white"></i>
                            </a>
                            <a href="#deleteModal" class="btn btn-danger col-sm-12 col-md-3 btn-sm" data-toggle="modal">
                                <i class="ion-android-delete text-white"></i>
                            </a>

                        </td>
                    </tr>
                    <tr class="row m-0">
                        <td class="col-4">Central Bangna</td>
                        <td class="col-4">SHISEDO</td>
                        <td class="col-2">Boutique</td>
                        <td class="col-2 text-center">
                            <a href="Counter_Edit" class="btn btn-primary col-sm-12 col-md-3 btn-sm">
                                <i class="ion-eye text-white"></i>
                            </a>
                            <a href="Counter_Edit" class="btn btn-warning col-sm-12 col-md-3 btn-sm">
                                <i class="ion-edit text-white"></i>
                            </a>
                            <a href="#deleteModal" class="btn btn-danger col-sm-12 col-md-3 btn-sm" data-toggle="modal">
                                <i class="ion-android-delete text-white"></i>
                            </a>

                        </td>
                    </tr>
                    <tr class="row m-0">
                        <td class="col-4">The Mall Bangkae</td>
                        <td class="col-4">Lux Asia</td>
                        <td class="col-2">Counter</td>
                        <td class="col-2 text-center">
                            <a href="Counter_Edit" class="btn btn-primary col-sm-12 col-md-3 btn-sm">
                                <i class="ion-eye text-white"></i>
                            </a>
                            <a href="Counter_Edit" class="btn btn-warning col-sm-12 col-md-3 btn-sm">
                                <i class="ion-edit text-white"></i>
                            </a>
                            <a href="#deleteModal" class="btn btn-danger col-sm-12 col-md-3 btn-sm" data-toggle="modal">
                                <i class="ion-android-delete text-white"></i>
                            </a>

                        </td>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>
</div>

<!-- Delete Modal HTML -->
<div id="deleteModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h4 class="modal-title">Delete</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete these Records?</p>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                    <input type="submit" class="btn btn-danger" value="Delete">
                </div>
            </form>
        </div>
    </div>
</div>