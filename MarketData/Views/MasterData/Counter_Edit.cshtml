@{
    ViewData["Title"] = "Add Counter";
}


<h3>@ViewData["Title"]</h3>
<hr />

<br />

<form>
    <div class="row col-md-12 col-sm-12">
        <div class="form-group col-md-6 col-sm-6">
            <label for="name">Department Store</label>
            <select class="form-control">
                <option>Please select</option>
                <option>Central Bangna</option>
                <option>The Mall Bangkae</option>
                <option>Robinson Bangrak</option>
            </select>
        </div>

    </div>
    <div class="row col-md-12 col-sm-12">
        <div class="form-group col-md-6 col-sm-6">
            <label for="name">Brand</label>
            <select class="form-control">
                <option>Please select</option>
                <option>LOREAL</option>
                <option>SHISEDO</option>
                <option>Lux Asia</option>
            </select>
        </div>

    </div>
    <div class="row col-md-12 col-sm-12">
        <div class="form-group col-md-6 col-sm-6">
            <label for="name">Distribution Channels</label>
            <select class="form-control">
                <option>Please select</option>
                <option>Counter</option>
                <option>Boutique</option>
                <option>Online</option>
            </select>
        </div>

    </div>

    <div class="modal-footer">
        <a href="Counter" class="btn btn-danger">Save</a>
        <a href="Counter" class="btn btn-outline-danger">Cancel</a>

    </div>
</form>