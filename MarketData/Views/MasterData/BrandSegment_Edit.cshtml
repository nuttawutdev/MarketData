@{
    ViewData["Title"] = "Add Brand Segment";
}


<h3>@ViewData["Title"]</h3>
<hr />

<br />

<form>
    <div class="col-md-12 col-sm-12">
        <div class="form-group col-md-6 col-sm-6">
            <label for="name">Brand Segment Name</label>
            <input type="text" class="form-control input-sm" id="name" placeholder="">
        </div>
    </div>
    <div class="col-md-12 col-sm-12">
 
        <div class="form-group col-md-5 col-sm-5">
            <label for="pincode">
                <input type="checkbox" checked data-toggle="toggle">
                Active
            </label>
        </div>
    </div>

    <div class="modal-footer">
        <a href="BrandSegment" class="btn btn-danger">Save</a>
        <a href="BrandSegment" class="btn btn-outline-danger">Cancel</a>

    </div>
</form>