<body>
    <div id="blocker">
        <div></div>
    </div>
    <section class="login-dark">
        <form>

            <h2 class="visually-hidden">Forgot Password Form</h2>
            <div class="illustration"><i class="icon ion-ios-email-outline text-danger"></i></div>
            <div class="mb-3"><input class="form-control text-danger" type="email" name="email" placeholder="Email" id="email"></div>
            <div class="mb-3"><button class="btn d-block w-100 btn-danger" type="button" id="btnReset">Send email</button></div>
            <a class="forgot " asp-area="" asp-controller="Home" asp-action="Login">Log In</a>

        </form>
    </section>
    <div id="successModal" class="modal fade">
        <div class="modal-dialog modal-confirm">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="icon-box">
                        <i class="ion-checkmark text-white"></i>
                    </div>
                    <h4 class="modal-title w-100">Success!</h4>
                </div>
                <div class="modal-body">
                    <p id="txtResult" class="text-center">Data has been saved successfully.</p>
                </div>
                <div class="modal-footer">
                    <a id="successModalHref" href="#" class="btn btn-success btn-block btnSuccessModal" style="padding-top: 12px;">OK</a>
                </div>
            </div>
        </div>
    </div>

    <div id="failedModal" class="modal fade">
        <div class="modal-dialog modal-confirm">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="icon-box">
                        <i class="ion-close text-white"></i>
                    </div>
                    <h4 class="modal-title w-100">Failed!</h4>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="confirmID">
                    <p class="text-center" style="font-weight:bold" id="myModalFailedResult"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-block " data-dismiss="modal">Cancel</button>

                </div>
            </div>
        </div>
    </div>
</body>

</html>


<script type="text/javascript">

    $(document).ready(function () {

        $("#btnReset").click(function () {
            if ($("#email").val() != "") {
              
            $("#blocker").show();
             var model = @Html.Raw(Json.Serialize(Model));
               $.ajax({
                   type: "GET",
                    url: '@Url.Action("ResetPassword", "Users")',
                    contentType: "application/json; charset=utf-8",
                   data: {
                       email: $("#email").val()
                   },
               success: function (data) {
                   $("#blocker").hide();
                   if (data.isSuccess) {
                       $('#successModalHref').attr("href", "Login");
                       $('#successModal').modal('show');
                       $('#txtResult').text("");
                   } else {
                       $('#failedModal').modal('show');
                       $('#myModalFailedResult').text(data.responseError != ""
                           && data.responseError != null ? data.responseError : 'Forgot password failed');
                   }
                   $('#confirmID').val('');
                   $('#myModalFailedResult').val('');
                    },
                   error: function () {
                       $("#blocker").hide();
                    }
                });
            }

        })


    });
</script>