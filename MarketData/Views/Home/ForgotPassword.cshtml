    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body>

    <section class="login-dark">
        <form>

            <h2 class="visually-hidden">Login Form</h2>
            <div class="illustration"><i class="icon ion-ios-email-outline text-danger"></i></div>
            <div class="mb-3"><input class="form-control text-danger" type="email" name="email" placeholder="Email" id="email"></div>
            <div class="mb-3"><button class="btn d-block w-100 btn-danger" type="button" id="btnReset">Send email</button></div>
            <a class="forgot " asp-area="" asp-controller="Home" asp-action="Login">Log In</a>

        </form>
    </section>
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/js/Data-Table-with-Search-Sort-Filter-and-Zoom-using-TableSorter.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.tablesorter/2.31.2/js/jquery.tablesorter.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.tablesorter/2.31.2/js/widgets/widget-filter.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.tablesorter/2.31.2/js/widgets/widget-storage.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0/js/bootstrap.bundle.min.js"></script>
</body>

</html>


<script type="text/javascript">

    $(document).ready(function () {

        $("#btnReset").click(function () {
            if ($("#email").val() != "") {
              
            $("#blocker").show();
             var model = @Html.Raw(Json.Serialize(Model));
               $.ajax({
                   type: "GET",
                    url: '@Url.Action("ResetPassword", "Users")',
                    contentType: "application/json; charset=utf-8",
                   data: {
                       email: $("#email").val()
                   },
               success: function (data) {
                   $("#blocker").hide();
                   if (data.isSuccess) {
                       $('#successModalHref').attr("href", "Login");
                       $('#successModal').modal('show');
                       $('#txtResult').text("");
                   } else {
                       $('#failedModal').modal('show');
                       $('#myModalFailedResult').text(data.responseError != ""
                           && data.responseError != null ? data.responseError : 'Reset email failed');
                   }
                   $('#confirmID').val('');
                   $('#myModalFailedResult').val('');
                    },
                   error: function () {
                       $("#blocker").hide();
                    }
                });
            }

        })


    });
</script>